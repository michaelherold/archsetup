[user]
	name = Michael Herold
    email = michael.j.herold@gmail.com
[alias]
    st = status
    ci = commit
    co = checkout
    staged = diff --cached
    unstaged = diff
    both = diff HEAD
    amend = commit --amend
    lg = log --graph --pretty=format:'%Cred%h%Creset %Cblue<%ae>%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	undo-commit = reset --soft HEAD^
[credential]
    helper = cache --timeout=3600
[achievement]
    upload = false
[github]
    user = michaelherold
[core]
	excludesfile = /home/herold/.gitignore
[color]
    ui = true

# Requires git 1.7.10.2+
[include]
    path = ~/.gitconfig-local
